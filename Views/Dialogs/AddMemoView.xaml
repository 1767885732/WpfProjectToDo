<UserControl x:Class="WpfProjectToDo.Views.Dialogs.AddMemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"  
             mc:Ignorable="d" 
             Width="450" Height="280"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Padding="20,10" Text="添加备忘录" FontSize="20" FontWeight="Bold"/>

        <DockPanel Grid.Row="1" LastChildFill="False">

            <TextBox Text="{Binding Model.Title}" Margin="20,0" DockPanel.Dock="Top" md:HintAssist.Hint="请输入备忘录概要"/>

            <TextBox Text="{Binding Model.Content}" Margin="20,10" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100" DockPanel.Dock="Top" md:HintAssist.Hint="请输入备忘录内容"/>
        </DockPanel>

        <StackPanel Margin="10" Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="确认" Command="{Binding SaveCommand}" Margin="0 0 10 0"/>
            <Button Content="取消" Command="{Binding CancelCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
